<div class="breadcome-area">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="breadcome-list">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="breadcome-heading">
                                            <form role="search" class="sr-input-func">
                                                <input type="text" placeholder="Search..." class="search-int form-control">
                                                <a href="#"><i class="fa fa-search"></i></a>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        
                                        <ul class="breadcome-menu">
                                            <li><a href="#">Home</a> <span class="bread-slash">/</span>
                                            </li>
                                            <li><span class="bread-blod">Danh sách sản phẩm gian hàng Samsung</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="courses-area">
            <div class="container-fluid">
                <div class="row">
                    {{#each data}}
                    
                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                        
                        <div class="courses-inner res-mg-b-30">
                            <div class="courses-title">
                                <a href="#"><img src="{{this.img}}" alt=""></a>
                                <h2>{{this.name}}</h2>
                            </div>
                            
                            <div class="course-des">
                                <p><span><i class="fa fa-clock"></i></span> <b>Giá sản phẩm:</b> {{this.newPrice}}</p>
                                <p><span><i class="fa fa-clock"></i></span> <b>Loại sản phẩm:</b> {{this.producer}}</p>
                                <p><span><i class="fa fa-clock"></i></span> <b>Số lượng sản phẩm:</b>{{this.quatitySold}}</p>
                            </div>
                            <div class="product-buttons">
                                <a href="/ChinhSuaSanPham"> <button type="button" class="button-default cart-btn">Chỉnh sửa</button></a>
                            </div>
                            <br>
                            <div class="product-buttons">
                                <a href="/XoaSanPham/{{this.id}}"> <button type="button" class="button-default cart-btn">Xóa sản phẩm</button></a>
                            </div>
                    </div>
                </div>
                    {{/each}}
            </div>
        </div>
    </div>
 </div>
        